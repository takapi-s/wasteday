{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "wasteday",
  "version": "1.0.3",
  "identifier": "com.pocky.wasteday",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "WasteDay",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://api.github.com/repos/takapi-s/wasteday/releases/latest"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXkgMTY4QjEwODQ2N0I1OTE3MA0KUldSd2tiVm5oQkNMRnN6Q2RTQ2pESTMyenZ4aE9wQnBXdjRZaENyOTRFdWxqekZiZ0ZRTFlvYUUNCg=="
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
