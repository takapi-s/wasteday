{
  "name": "wasteday",
  "version": "1.0.0",
  "description": "無駄時間可視化アプリケーション",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "clean": "npm run clean --workspaces",
    "db:start": "cd packages/database && npm run start",
    "db:stop": "cd packages/database && npm run stop",
    "db:migrate": "cd packages/database && npm run migrate",
    "db:reset": "cd packages/database && npm run reset"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.2"
  },
  "keywords": [
    "wasteday",
    "time-tracking",
    "productivity",
    "supabase",
    "typescript"
  ],
  "author": "",
  "license": "MIT"
}
